---
permalink: api/releases.json
---
{
    "releases": [
        {% for post in collections.release reversed %}
        {
            "id": {{ post.data.release_version | prepend: '-' | prepend: post.data.release_package | jsonify }},
            "release_package": {{ post.data.release_package | jsonify }},
            "package_series": {{ post.data.package_series | jsonify }},
            "release_version": {{ post.data.release_version | jsonify }},
            "release_date": {{ post.date | date: '%s' }},
            "download_url": "{{ post.data.download_url }}",
            "announce_url": "{{ post.url | prepend: site.baseurl | prepend: site.url }}"
        } {% unless forloop.last == true %},{% endunless %}
        {% endfor %}
    ],
    "packages": [
        {% for release_package in release_packages %}
        {
            "id": {{ release_package[0] | jsonify }},
            "series": [
            {% for branch in release_package[1].series %}
            {
                "package_series": {{ branch.package_series | jsonify }},
                "title": {{ branch.title | jsonify }},
                "repo_url": {{ branch.repo_url | jsonify }},
                "status": {{ branch.status | jsonify }}
                {% if branch.first_release %}
                , "first_release": {{ branch.first_release | date: '%s' }}
                {% endif %}
            } {% unless forloop.last == true %},{% endunless %}
            {% endfor %}
            ]
        } {% unless forloop.last == true %},{% endunless %}
        {% endfor %}
    ]
}